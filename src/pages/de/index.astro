			<Experience />
		</Container>
		<Container id="projects">
			<TitleSection>
				<CodeIcon class="size-8" />
				{t('index.projects')}
			</TitleSection>
			<Projects />
		</Container>
		<Container id="about-me">
			<TitleSection>
				<AboutMeIcon class="size-8" />
				{t('index.about')}
			</TitleSection>
			<AboutMe />
		</Container>
        <Container>
            <Footer />
        </Container>
	</main>
</Layout>
